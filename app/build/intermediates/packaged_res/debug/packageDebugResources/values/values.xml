<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="WeatherLabel">#A1887F</color>
    <color name="black">#FF000000</color>
    <color name="purple_500">#f231f2</color>
    <color name="purple_700">#7B1FA2</color>
    <color name="teal_200">#80CBC4</color>
    <color name="teal_700">#00796B</color>
    <color name="viewBG">#FFF9C4</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Cool Weather APP</string>
    <string name="cidade">Localização</string>
    <string name="humidade">Humidade</string>
    <string name="humidade_val" translatable="false">%d %%</string>
    <string name="precipitacao">Precipitação</string>
    <string name="precipitacao_val" translatable="false">%d mm</string>
    <string name="refresh">Refresh</string>
    <string name="temperatura">Temperatura</string>
    <string name="temperatura_valor" translatable="false">%d ºC</string>
    <string name="vento_vel">Vel Vento</string>
    <string name="vento_vel_val" translatable="false">%d km/h</string>
    <string name="weather_icon" translatable="false">Weather Icon</string>
    <style name="Base.Theme.CoolWeatherAPP" parent="Theme.Material3.DayNight.NoActionBar">
        
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <item name="background">@color/viewBG</item>
        <item name="android:textColor">@color/WeatherLabel</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.CoolWeatherAPP" parent="Base.Theme.CoolWeatherAPP"/>
    <style name="Theme.Day" parent="Base.Theme.CoolWeatherAPP">
        <item name="android:windowBackground">@drawable/sunny_bg</item>
    </style>
    <style name="Theme.Day.Land" parent="Base.Theme.CoolWeatherAPP">
        <item name="android:windowBackground">@drawable/sunny_bg_land</item>
    </style>
    <style name="Theme.Night" parent="Base.Theme.CoolWeatherAPP">
        <item name="android:windowBackground">@drawable/night_bg</item>
    </style>
    <style name="Theme.Night.Land" parent="Base.Theme.CoolWeatherAPP">
        <item name="android:windowBackground">@drawable/night_bg_land</item>
    </style>
</resources>